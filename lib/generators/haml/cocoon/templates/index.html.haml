.row
  .col-12
    = render 'sub_navigation', page: 'all'

    %h1= t('.all_<%= plural_name %>', default: '<%= plural_title_name %>')

    %table#index-table.table.table-condensed.table-striped
      %thead
        %tr
<% for attribute in attributes -%>
<% unless attribute.type == :text -%>
          %th <%= attribute.type == 'text' %>
          %th{data: {type: '<%= attribute.type %>'}}= t('.<%= attribute.name %>', default: '<%= attribute.name.titleize %>')
<% end -%>
<% end -%>
          %th
      %tbody{data: {provides: "rowlink"}}
        - @<%= plural_name %>.each do |<%= singular_name %>|
          %tr
<% attribute = attributes.first -%>
            %td
              = link_to '', <%= singular_name %>, class: 'rowlink'
              = custom_view <%= singular_name %>, '<%= attribute.name %>'
<% for attribute in attributes[1..-1] -%>
<% unless attribute.type == :text -%>
            %td= custom_view <%= singular_name %>, '<%= attribute.name %>'
<% end -%>
<% end -%>
            %td.actions.nolink
              = link_to t('.show', default: 'Show'), <%= singular_name %>, class: 'btn btn-primary btn-mini'
              = link_to t('.edit', default: 'Edit'), edit_<%= singular_table_name %>_path(<%= singular_name %>), class: 'btn btn-success btn-mini'
              = link_to t('.destroy', default: 'Destroy'), <%= singular_name %>, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger btn-mini'
    = paginate @<%= plural_name %>
%br
