= semantic_form_for @<%= singular_table_name %>, html: {class: 'form-horizontal'} do |f|

  -if @<%= singular_table_name %>.errors.any?
    - @<%= singular_table_name %>.errors.full_messages.each do |msg|
      .alert.alert-danger
        %button.close{title: 'Close this notification', data: {dismiss: 'alert'}} âœ–
        = msg

  %section[@<%= singular_table_name %>]
    .panel
      .panel-heading
        %b <%= title_name %>
      = f.inputs do
<% for attribute in self_attributes -%>
        = f.input :<%= attribute.name %>, (respond_to?('<%= attribute.type %>_edit') ? send('<%= attribute.type %>_edit',
                  @<%= singular_table_name %>.class.columns_hash['<%= attribute.name %>'], @<%= singular_table_name %>.<%= attribute.name %>) : {})
<% end -%>
      %br
<% for ref in references -%>
      = render 'nests', f: f, nested: '<%= ref %>'
<% end -%>

      .panel-footer
        .col-3 &nbsp;
        .col-offset-3
          = f.actions do
            = f.action :submit, as: :input, button_html: {class: 'btn btn-primary btn-large'}
            = f.action :reset, as: :input, button_html: {class: 'btn btn-inverse btn-large',
                       :disable_with => 'Please wait ...'}
