.row
  .col-10
    .subnav
      %ul.nav.nav-pills
        %li= link_to t('.new_<%= title_name %>'), new_<%= singular_table_name %>_path
        %li= link_to t('.all_<%= plural_title_name %>'), <%= plural_table_name %>_path
        %li= link_to t('.edit_this_<%= title_name %>'), edit_<%= singular_table_name %>_path(@<%= singular_name %>)
        %li.active= link_to t('.show_this_<%= title_name %>'), @<%= singular_name %>

    %h1= t '.show_<%= title_name %>'

    - unless notice.blank?
      .alert.alert-success
        %button.close{title: t('.close_notification', default: 'Close Notification'), data: {dismiss: 'alert'}} âœ–
        = notice

    %section[@<%= singular_name %>]
      .panel
        .panel-heading
          %b= t '.<%= title_name %>'
        %dl.dl-horizontal
<% (belongs_to.merge self_attributes).each do |name, attribute| -%>
          %dt= t '.<%= attribute.name %>'
          %dd= inline_input @<%= singular_name %>, '<%= attribute.name %>'
<% end -%>
<% references.each do |name, ref|-%>
        = render 'view_nests', f: @<%= singular_name %>.<%= ref.name %>, nested: '<%= name %>', has_one: <%= ref.has_one? %>
<% end -%>

  = render 'sidebar_sections'
